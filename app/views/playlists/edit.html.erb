<p class="h1" > Edit </p>

<%= render 'form' ,playlist: @playlist %>

<p class="h4"> list </p>

<div class="list-group" style="width:300px">
  <% PlaylistMusic.where(playlist_id: @playlist.id).each do |p_m| %>
    <%= link_to "/musics/#{p_m["music_id"]}", :class=>"list-group-item" do %>
      <h5 stlye="font-weight:bold"> <%= Music.where(id:p_m["music_id"]).first.name %> </h5>
      <p> <%= Music.where(id:p_m["music_id"]).first.artist %> </p>
      <%= link_to "x" ,"/playlists_musics/#{p_m.id}" ,
        method: :delete , data: { confirm: 'Are you sure?' }, :class=>"btn btn-dark btn-sm" %>
    <% end %>
  <% end %>
</div>